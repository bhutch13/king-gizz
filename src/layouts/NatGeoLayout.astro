---
// src/layouts/NatGeoLayout.astro
const { title, author, date, category } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <style>
      /* Custom styles to match National Geographic feel */
      :root {
        --ng-yellow: #FFD100;
        --ng-black: #1A1A1A;
      }
      
      body {
        font-family: 'Roboto', sans-serif;
        color: var(--ng-black);
        line-height: 1.5;
        margin: 0;
        padding: 0;
        background-color: #FFFFFF;
      }
      
      .article-title {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1rem;
      }
      
      .article-subtitle {
        font-size: clamp(1.2rem, 3vw, 1.5rem);
        color: #666;
        margin-bottom: 2rem;
      }
      
      .category-tag {
        display: inline-block;
        padding: 0.5rem 1rem;
        border: 1px solid var(--ng-black);
        font-weight: 700;
        font-size: 0.875rem;
        letter-spacing: 0.05em;
        margin-bottom: 1.5rem;
      }
      
      .image-caption {
        font-size: 0.875rem;
        color: #666;
        border-left: 4px solid var(--ng-yellow);
        padding-left: 1rem;
        margin: 1.5rem 0;
      }
      
      .article-meta {
        font-size: 0.875rem;
        color: #666;
        margin-bottom: 2rem;
      }
      
      .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-top: 2.5rem;
        margin-bottom: 1.5rem;
        position: relative;
      }
      
      .section-title::after {
        content: "";
        position: absolute;
        bottom: -0.5rem;
        left: 0;
        width: 2rem;
        height: 3px;
        background-color: var(--ng-yellow);
      }
      
      .read-more {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        font-weight: 700;
        cursor: pointer;
      }
      
      .photo-credit {
        text-transform: uppercase;
        font-size: 0.75rem;
        color: #999;
        letter-spacing: 0.05em;
        margin-top: 1rem;
      }
      
      .content {
        padding: 1rem;
        max-width: 768px;
        margin: 0 auto;
      }
      
      @media (min-width: 768px) {
        .content {
          padding: 2rem;
        }
      }
      
      .visualization-container {
        margin: 2rem 0;
        border-radius: 0.25rem;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      }
    </style>
  </head>
  <body>
    <main>
      <article class="content">
        {category && <div class="category-tag">{category}</div>}
        <h1 class="article-title">{title}</h1>
        
        <div class="article-meta">
          {author && <p>By {author}</p>}
          {date && <p>{date}</p>}
        </div>
        
        <slot />
      </article>
    </main>
  </body>
</html>