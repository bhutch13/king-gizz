<style>
  /* Wave animation */
  @keyframes wave {
    0% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(-50px);
    }
    100% {
      transform: translateX(0);
    }
  }

  /* Cloud animations */
  @keyframes float-1 {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(400%);
    }
  }

  @keyframes float-2 {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(400%);
    }
  }

  @keyframes float-3 {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(400%);
    }
  }

  svg.wave {
    animation: wave 15s ease-in-out infinite;
  }

  .cloud-1 {
    animation: float-1 30s linear infinite;
  }

  .cloud-2 {
    animation: float-2 40s linear infinite;
    animation-delay: -20s;
  }

  .cloud-3 {
    animation: float-3 35s linear infinite;
    animation-delay: -10s;
  }
</style>