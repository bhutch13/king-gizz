---
// src/layouts/CVLayout.astro
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <title>{Astro.props.title || "Bryce Hutchinson | CV"}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      :root {
        --text-primary: #2d3436;
        --text-secondary: #636e72;
        --border-color: #eaeaea;
      }

      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        margin: 0;
        color: var(--text-primary);
      }

      nav {
        padding: 1rem;
        background: #fff;
        border-bottom: 1px solid var(--border-color);
      }

      nav .content {
        max-width: 1000px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      nav a {
        color: inherit;
        text-decoration: none;
        padding: 0.5rem;
      }

      nav a:hover {
        color: var(--text-secondary);
      }

      main {
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      @media print {
        nav {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <nav>
      <div class="content">
        <a href="/">Home</a>
        <div>
          <a href="/articles/king-gizzard">Article</a>
          <a href="/cv">CV</a>
        </div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
  </body>
</html>